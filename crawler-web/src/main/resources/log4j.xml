<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss} [%t] %c{1} - %m%n" />
		</layout>
	</appender>
	<appender name="dailyfile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/tmp/crawlerlogs/web.log" />
		<param name="Append" value="true" />
		<param name="Encoding" value="UTF-8" />
		<param name="DatePattern" value="'.'yyyy_MM_dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{MM-dd HH:mm:ss} [%p] (%F:%L): %m%n" />
		</layout>
	</appender>
	<logger name="org.springframework">
		<level value="info" />
	</logger>
	<logger name="java.sql">
		<level value="info" />
	</logger>

	<root>
		<priority value="info" />
		<appender-ref ref="console" />
		<appender-ref ref="dailyfile" />
	</root>
	
</log4j:configuration>
